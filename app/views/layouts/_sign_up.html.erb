<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body p-a-0 js-modalBody">
        <%= form_for(User.new, url: registration_path(:user), html: { id: 'sign-up-form', class: "m-x-auto text-center app-login-form", role: :form }) do |f| %>

            <img src="http://i.imgur.com/mJLWHVZ.png" alt="brand" class="app-brand">

          <div class="form-group">
            <%= link_to omniauth_authorize_path(:user, :facebook), class: "fb-button" do %>
              <span class="facebook"></span> Sign up with Facebook
            <% end %>
          </div>
          <hr />
          <p class="errors error-message"></p>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, id: 'sign-up-password', required: true, minlength: 8, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm Password", 'data-rule-equalTo' => "#sign-up-password" %>
          </div>
          <div class="m-b-lg">
            <%= f.button "Sign Up", class: "btn btn-lg btn-block red" %>
            <br />
            <%= modal_to "Login", "#loginModal" %> | 
            <%= modal_to "Forgot password", "#passwordModal" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
