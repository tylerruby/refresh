<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <em class="close-button-icon"></em>
        </button>
      </div>
      <div class="modal-body p-a-0 js-modalBody">
        <%= form_for(User.new, url: registration_path(:user), html: { id: 'sign-up-form', class: "m-x-auto text-center app-login-form", role: :form, 'data-validate' => true }) do |f| %>
          <%= image_tag('Derby-Logo-Black', class: "app-brand") %>
          <div class="form-group">
            <%= link_to omniauth_authorize_path(:user, :facebook), class: "fb-button" do %>
              <span class="facebook"></span> Sign up with Facebook
            <% end %>
          </div>
          <hr />
          <p class="errors error-message"></p>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.text_field :mobile_number, class: "form-control", placeholder: "Mobile number", 'data-phone-number' => true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, id: 'sign-up-password', required: true, minlength: 8, class: "form-control", placeholder: "Password" %>
          </div>

          <div class="m-b-lg">
            <%= f.button "Sign Up", class: "btn btn-lg btn-block red", id: "sign-up-modal-view" %>
            <br />
            <%= modal_to "Login", "#loginModal", class: "black-links" %> | 
            <%= modal_to "Forgot password", "#passwordModal", class: "black-links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
