<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModal" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body p-a-0 js-modalBody">
        <%= form_for(User.new, url: registration_path(:user), html: { class: "m-x-auto text-center app-login-form", role: :form }) do |f| %>
          <a href="/" class="app-brand m-b-lg">
            <img src="http://i.imgur.com/mJLWHVZ.png" alt="brand">
          </a>
          <div class="form-group">
            <%= link_to omniauth_authorize_path(:user, :facebook), class: "fb-button" do %>
              <span class="facebook"></span> Sign up with Facebook
            <% end %>
          </div>
          <hr />
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, required: true, minlength: 8, class: "form-control", placeholder: "Password" %>
            <p class="help-block">8 characters minimum</p>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, required: true, class: "form-control", placeholder: "Confirm Password" %>
          </div>
          <div class="m-b-lg">
            <%= f.button "Sign Up", class: "btn btn-block green" %>
            <br />
            <%= modal_to "Login", "#loginModal" %> | 
            <%= modal_to "Forgot password", "#passwordModal" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
