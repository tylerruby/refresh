<body style="background-color: #fff;">
<div class="col-sm-5 col-sm-offset-0 col-md-3 col-md-offset-1 no-padding hidden-xs">
	<div class="landing-video">
	<video width="310" height="418" autoplay loop>
	  <source src="https://cdn.streamable.com/video/mp4/brqq.mp4" type="video/mp4">
	  Your browser does not support the video tag.
	</video>
	</div>
</div>
<div class="col-sm-7 col-md-7 no-padding">
	<div class="jumbotron landing-header">
		<br /><br /><br />
		<br class="hidden-xs" />
		<br class="hidden-xs" />
		<br class="hidden-xs" />
		<br class="hidden-xs" />
		<h1 class="text-center hidden-xs hidden-sm">15 Minute Food Delivery</h1>
		<h2 class="text-center hidden-md hidden-lg">15 Minute Food Delivery</h2>
		<h3 class="text-center hidden-xs hidden-sm">The best meals delivered for $2</h3>
		<h4 class="text-center hidden-md hidden-lg">The best meals delivered for $2</h4>
		<br />
		<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
	    <%= form_tag '', method: :post, id: 'store-location-form' do %>
	      <div class="input-group">
	        <%= hidden_field_tag :latitude %>
	        <%= hidden_field_tag :longitude %>
	        <%= search_field_tag :address, nil, class: "form-control landing-address", id: "gmaps-autocomplete", autofocus: true, placeholder: "Delivery address", required: true %>
	        <span class="input-group-btn">
	          <%= button_tag value: "search", class: "btn btn-default landing-address landing-button" do %>
	            <i class="fa fa-chevron-right"></i>
	          <% end %>
	        </span>
	      </div><!-- /input-group -->
	    <% end %>
		</div><!-- /.col-lg-6 -->
		<div class="clearfix"></div>
		<br class="hidden-xs" />
		<br /><br /><br />
		<br /><br /><br />
		<br class="hidden-xs" />
	  <br class="hidden-xs" />
	  <br class="hidden-xs" />
	  <br class="hidden-xs" />
	  <br class="hidden-xs" />   
	</div>
</div>

<!-- Loading Google Maps API only for this page -->
<script src="https://maps.googleapis.com/maps/api/js?signed_in=true&amp;libraries=places&amp;callback=initGoogleMapsAutocomplete" async="" defer=""></script>
</body>
