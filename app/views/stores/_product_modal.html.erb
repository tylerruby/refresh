<div id="<%= modal_id(product) %>" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="msgModal" aria-hidden="true">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="col-xs-8">
          <h4 class="modal-heading"><%= product.name %> - <%= link_to product.name, product.store %></h4>
        </div>
        <div class="clearfix"></div>
      </div>
      <div class="modal-body">
        <div class="col-md-12">
          <%= image_tag product.image.url(:medium), class: 'img-responsive' %>
        </div>
        <div class="clearfix"></div>
      </div>

      <div class="modal-footer">
        <div class="col-xs-12">
          <%= form_for CartItem.new, url: cart_add_path, method: :patch do |f| %>
            <%= f.hidden_field :quantity, name: 'quantity', value: 1 %>
            <%= f.hidden_field :product_id, name: 'product_id', value: product.id %>
            <div class="col-xs-2 col-xs-offset-1">
              <h3 style="margin-top:0px;"><%= humanized_money_with_symbol product.price %></h3>
            </div>
            <br><br>
            <div class="col-xs-12">
              <%= f.button class: 'btn btn-block green btn-success' do %>
                <i class="fa fa-plus"></i> Add
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
