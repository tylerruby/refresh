<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Order Summary</h4>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-xs-10">
        <h5>Subtotal</h5>
      </div>
      <div class="col-xs-2">
        <h5><%= humanized_money_with_symbol @cart.subtotal %></h5>
      </div>
      <div class="col-xs-10">
        <h5>Delivery</h5>
      </div>
      <div class="col-xs-2">
        <h5 class="pull-right"><%= humanized_money_with_symbol @cart.shipping_cost  %></h5>
      </div>
    </div>

    <hr />

    <div class="col-xs-10">
      <h4>Total</h4>
    </div>
    <div class="col-xs-2">
      <h4><%= humanized_money_with_symbol @cart.total %></h4>
    </div>
  </div>
  <hr />
  <div class="panel-body">
    <button class="btn btn-red btn-block">Check Out</button>
  </div>
</div>
