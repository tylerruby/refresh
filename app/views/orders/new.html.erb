<%= form_for(@order, html: { id: 'order-form'}) do |f| %>
  <%= f.hidden_field :delivery_time, value: @cart.delivery_time %>
  <br />
  <div class="row">
    <div class="col-sm-8 col-md-6 col-md-offset-1 col-lg-5 col-lg-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Checkout</h4>
        </div>

        <div class="panel-body">
          <%= render 'orders/new/address', f: f %>
          <hr />
          <%= render 'orders/new/payment', f: f %>
        </div>
      </div>
    </div>

    <div class="col-sm-4 col-md-4 col-lg-3">
      <%= render 'orders/new/summary' %>
    </div>
  </div>
<% end %>
