<% if @store.nil? || @store.available_for_delivery_on?(coordinates) %>
  <% @products.each do |product| %>
    <%= render 'stores/product_modal', product: product, store: product.store %>
  <% end %>
<% end %>

<% if @products.empty? %>
  In the meantime, check out our <a href="/atlanta">Atlanta</a> store!
<% end %>

<% @products.in_groups_of(3).map(&:compact).each do |group| %>
  <div class="row">
    <% group.each do |product| %>
      <div class="col-lg-4 col-sm-4 col-xs-6 thumb">
        <%= link_to '#' + modal_id(product), 'data-toggle' => 'modal', class: 'thumbnail' do %>
          <h3><%= product.name %></h3>
          <h4><%= product.price.format %></h4>
          <%= image_tag product.image_url, class: 'img-responsive' %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

